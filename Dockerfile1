FROM equator11111/dart as dart-runtime

WORKDIR /app

ADD pubspec.* /app/
RUN pub get
ADD bin /app/bin/
ADD lib /app/lib/
RUN pub get --offline
RUN dart2native /app/bin/test.dart -o /app/server

FROM frolvlad/alpine-glibc

COPY --from=dart-runtime /app/server /server
CMD []
ENTRYPOINT [ "/server" ]
